<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="ds.meterscanner.mvvm.viewmodel.AlarmItemViewModel"
            />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="?selectableItemBackground"
        android:enabled="@{!viewModel.rescheduled}"
        android:gravity="center_vertical"
        android:onClick="@{viewModel.onClick}"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="@{!viewModel.rescheduled}"
            android:text="@{viewModel.time}"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="?android:textColorPrimary"
            tools:text="12:00"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/md_red_500"
            bind:visible="@{viewModel.rescheduled}"
            android:layout_marginEnd="16dp"
            android:includeFontPadding="false"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:onClick="@{viewModel.onDeleteClick}"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_action_clear"
            android:layout_marginEnd="8dp"
            />


    </LinearLayout>
</layout>
